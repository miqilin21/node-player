{
  "compilerOptions": {
    "strictNullChecks": true,
    "module": "ESNext",
    "target": "es2017",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["**/dist", "**/example", "**/node_modules"]
}
